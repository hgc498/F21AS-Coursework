earth_radius = 6371; //km
radian_latitude1 = latitude1 * (PI/180);
radian_longitude1 = longitude1 * (PI/180);
radian_latitude2 = latitude2 * (PI/180);
radian_longitude2 = longitude2 * (PI/180);
delta_latitude = radian_latitude2 - radian_latitude1;
delta_longitude = radian_longitude2 - radian_longitude1;
trigo = sin2
(delta_latitude /2) + cos(latitude1) * cos(latiude2) * sin2
(delta_longitude/2);
distance = 2 * earth_radius * asin(sqrt(trigo));
